{% extends 'layout.html.twig' %}

{% block title %}Participants - {{ parent () }}{% endblock %}

{% block content %}

<div class="card my-3">
    <h5 class="card-header bg-orange text-center">Liste des invités</h5>
    <div class="card-body">
        <div class="bg-light border rounded-3">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                        <tr>
                            <th></th>
                            <th class="hidden-phone"><i class="fa fa-question-circle"></i>Participants</th>
                            <th><i class="fa fa-bookmark"></i>Téléphone</th>
                            <th><i class="fa fa-bookmark"></i>E-mail</th>
                            <th><i class=" fa fa-edit"></i> Statut</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for guest in guests %}
                            {% if loop.index0 is divisible by(2) %}
                                <tr>
                                    <td>{{ guest.picture }}</td>
                                    <td class="hidden-phone">{{ guest.firstname }} {{ guest.lastname }}</td>
                                    <td>{{ guest.telephone }}</td>
                                    <td><span class="label label-info label-mini">{{ guest.email }}</span></td>
                                    <td>{{ guest.participate }}</td>
                                    <td>
                                        <select name="participate " class="dropdown-toggle" role="button" data-bs-toggle="dropdown" >
                                            <option value="">Modifier</option>
                                            <option class="bg-success text-white" value="participe">Participe</option>
                                            <option class="bg-info text-black" value="participe">Peut-être</option>
                                            <option class="bg-danger text-white" value="participe">Ne participe pas</option>
                                        </select>
                                    <td><button class="btn btn-success btn-xs"><i class="bi bi-check-lg"></i></button></td>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>{{ guest.picture }}</td>
                                    <td class="hidden-phone">{{ guest.firstname }} {{ guest.lastname }}</td>
                                    <td>{{ guest.telephone }}</td>
                                    <td><span class="label label-info label-mini">{{ guest.email }}</span></td>
                                    <td>{{ guest.participate }}</td>
                                    <td>
                                        <form action="participate" method="post">
                                        <select  name="participate " class="dropdown-toggle" role="button" data-bs-toggle="dropdown" >
                                            <option value="">Modifier</option>
                                            <option class="bg-success text-white" value="participe">Participe</option>
                                            <option class="bg-info text-black" value="participe">Peut-être</option>
                                            <option class="bg-danger text-white" value="participe">Ne participe pas</option>
                                        </select>

                                    <td>
                                        <button class="btn btn-success btn-xs"><i class="bi bi-check-lg" type="submit" id="send" name="send"></i></button></td>
                                    </form>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {% endblock %}
